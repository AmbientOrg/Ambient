{% if scope is undefined %}
    {% set scope_id = item.data.parent_id %}
    {% set scope = get_item(id=scope_id) %}
{% endif %}

{% set package_id = item_package_id(item_id=item_id) %}
{% set package = get_item(id=package_id) %}
<h2><a href="{{ item_url(from=page_url, item_id=package_id) }}">{{ package.name }}</a> <small>{{ package.version }}</small></h2>

<h3>In scope <a href="{{ item_url(from=page_url, item_id=scope_id)}}">{{ item_path(data = scope.data) }}</a></h3>

<h4>Components</h4>
<ul>
    {% for component_id, component_item_id in scope.components %}
    <li>
        {% set component = get_item(id = component_item_id) %}
        <a
            href="{{ item_url(from=page_url, item_id=component_item_id) }}"
            {% if component_item_id == item_id %}
            class="highlight"
            {% endif %}
        >{{ component_id }}</a>
    </li>
    {% endfor %}
</ul>