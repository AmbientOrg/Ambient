{% extends "views/base" %}

{% block title %}{{item_path(data = scope.data)}}{% endblock title %}

{% block sidebar %}

{% set package_id = item_package_id(item_id=item_id) %}
{% set package = get_item(id=package_id) %}
<h2><a href="{{ item_url(from=page_url, item_id=package_id) }}">{{ package.name }}</a> <small>{{ package.version }}</small></h2>

<h3>Scope <a href="{{ item_url(from=page_url, item_id=scope_id)}}"><code>{{ item_path(data = scope.data) }}</code></a></h3>

{% if scope.components %}
<h4><a href="#components">Components</a></h4>
{% endif %}

{% endblock sidebar %}

{% block content %}
<h1>Scope <code>{{item_path(data = scope.data)}}</code></h1>

{% include "partials/scope" %}
{% endblock content %}